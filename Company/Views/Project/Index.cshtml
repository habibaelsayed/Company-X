@{
    Layout = "_EmployeeOneLayout";
}

<h1>Projects</h1>
<a href="/WorksFor/Index">Projects Working Details</a>
<table class="table table-dark table-sm table-hover">
    <thead>
        <tr>
            <th scope="col">#</th>
            <th scope="col">Name</th>
            <th scope="col">Location</th>
            <th scope="col">City</th>
            <th scope="col">Department</th>
            <th scope="col">Handle</th>
        </tr>
    </thead>
    <tbody class="table-group-divider">
        @{
            int i = 0;
        }
        @foreach(Project item in Model)
        {
            <tr>
                <th scope="row">@(++i)</th>
                <td>@item.PName</td>
                <td>@item.PLoc</td>
                <td>@item.City</td>
                <td>@item.ProjDept.Dname</td>
                <td><a href="/project/details/@item.Pnum">Edit</a> | <a href="/project/delete/@item.Pnum">Delete</a></td>
            </tr>
            
        }
        
    </tbody>
</table>
<a class="btn btn-dark btn-xl" href="/project/addform">Add Project</a>


