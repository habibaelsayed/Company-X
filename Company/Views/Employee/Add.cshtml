@{
}
@using Company.ViewModel
@model EmployeeVM
<form asp-action="Add" asp-controller="employee" method="post">
    <div class="form-floating mb-3">
        <input type="text" class="form-control" asp-for="FirstName" id="floatingInput">
        <label for="floatingInput" asp-for="FirstName">First Name</label>
        <span asp-validation-for="FirstName" class="text-danger"></span>
    </div>
    <div class="form-floating mb-3">
        <input type="text" class="form-control" asp-for="LastName" id="floatingInput">
        <label for="floatingInput" asp-for="LastName">Last Name</label>

        <span asp-validation-for="LastName" class="text-danger"></span>
    </div>
    <div class="form-floating mb-3">
        <input type="date" asp-for="BirthDate" class="form-control" id="floatingInput">
        <label for="floatingInput" asp-for="BirthDate">Birth Date</label>

        <span asp-validation-for="BirthDate" class="text-danger"></span>
    </div>
    <div class="form-floating mb-3">
        <input type="password" class="form-control" id="floatingPassword" asp-for="Password" placeholder="Password">
        <label for="floatingPassword" asp-for="Password">Password</label>

        <span asp-validation-for="Password" class="text-danger"></span>
    </div>
    <div class="form-floating mb-3">
        <input type="password" class="form-control" asp-for="ConfirmPassword" id="floatingPassword" placeholder="Confirm Password">
        <label for="floatingPassword" asp-for="ConfirmPassword">Confirm Password</label>

        <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
    </div>
    <div class="form-floating mb-3">
        <input type="text" class="form-control" asp-for="Address" id="floatingInput">
        <label for="floatingInput" asp-for="Address">Address</label>

        <span asp-validation-for="Address" class="text-danger"></span>
    </div>
    <div class="form-floating mb-3">
        <input type="text" class="form-control" asp-for="Salary" id="floatingInput">
        <label for="floatingInput" asp-for="Salary">Salary</label>

        <span asp-validation-for="Salary" class="text-danger"></span>
    </div>
    <div class="form-floating mb-3">
        <input type="text" class="form-control" asp-for="Sex" id="floatingInput">
        <label for="floatingInput" asp-for="Sex">Sex</label>

        <span asp-validation-for="Sex" class="text-danger"></span>
    </div>
    <div class="form-floating mb-3">
        <select asp-for="DeptId" asp-items="Model.Departments" id="floatingInput" class="form-control">
        </select>
        <label asp-for="DeptId" class="form-label" for="floatingInput"></label>

        <span asp-validation-for="DeptId" class="text-danger"></span>
        <div asp-validation-summary="ModelOnly"></div>

    </div>
    <input type="submit" value="Add" />
    

</form>

@section Scripts {
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
}
